
<section class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Order details</h2>
    </div>
    <form method="post" action="/upsert">
      {{#if order}}
      <input type="hidden" name="id" value="{{order.id}}" />
      {{/if}}
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" name="customerName" value="{{order.customerName}}">
          <label class="mdl-textfield__label" for="sample1">What did you buy?</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" name="productCode" id="productCode" value="{{order.productCode}}">
          <label class="mdl-textfield__label" for="sample1">Why did you buy it?</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" pattern="[0-9]*" name="unitsOrdered" value="{{order.unitsOrdered}}">
          <label class="mdl-textfield__label" for="sample1">Units ordered...</label>
          <span class="mdl-textfield__error">Must be a positive integer</span>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" pattern="[0-9]*(\.[0-9]+)?" name="unitPrice" value="{{order.unitPrice}}">
          <label class="mdl-textfield__label" for="sample1">Units price (USD)...</label>
          <span class="mdl-textfield__error">Must be a positive number</span>
        </div>

        {{#if order}}
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" pattern="WORK|RECREATION|SURVIVAL" name="status" value="{{order.status}}">
          <label class="mdl-textfield__label" for="sample1">Type</label>
          <span class="mdl-textfield__error">Must be one of WORK, RECREATION, or SURVIVAL</span>
        </div>
        {{/if}}
      </div>
      <div class="mdl-card__actions">
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored mdl-button--raised">
          {{#if order}}Save{{else}}Create{{/if}}
        </button>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/">Cancel</a>
      </div>
    </form>
  </div>
</section>
